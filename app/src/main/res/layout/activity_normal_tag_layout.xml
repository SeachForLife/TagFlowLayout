<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:loren="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loren_yang.tagflowlayout.CardViewTagActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normalview_center"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            />

        <com.loren_yang.taglayout.TagFlowLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/normal_taglayout"
            loren:tagGravity="center"
            loren:tagPadding="25dp"
            loren:tagDivider_horizontal="10dp"
            loren:tagDivider_vertical="10dp"
            >
        </com.loren_yang.taglayout.TagFlowLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normalview_left"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            />

        <com.loren_yang.taglayout.TagFlowLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/normal_taglayout1"
            loren:tagGravity="left"
            loren:tagDivider_horizontal="15dp"
            loren:tagDivider_vertical="10dp"
            loren:tagPadding="25dp"
            >
        </com.loren_yang.taglayout.TagFlowLayout>

    </LinearLayout>

</RelativeLayout>
